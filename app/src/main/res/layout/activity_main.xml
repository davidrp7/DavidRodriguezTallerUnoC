<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aula7.davidrodrigueztalleruno.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/cover"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent">

            <TextView
                android:id="@+id/tv_Artista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/artista"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:textSize="20dp"
                android:textColor="@color/colorText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/summer"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/tv_Artista"
                android:textColor="@color/colorText"/>

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/like"
                android:layout_marginTop="170dp"
                android:layout_toLeftOf="@id/iv_heart"
                />

            <ImageView
                android:id="@+id/iv_heart"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/heart"
                android:layout_marginTop="170dp"
                android:layout_toLeftOf="@id/iv_share"
            />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/share"
                android:layout_marginTop="170dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/cover_music_1"
                    android:layout_marginLeft="20dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/tv_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prisionero_de_tus_ojos"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_text1"
                        android:textSize="10dp"
                        android:text="JUADS PRIEST "/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/play"
                    />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/tv_profile2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/cover_music_2"
                    android:layout_marginLeft="20dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/tv_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prisionero de tus ojos "
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_text2"
                        android:textSize="10dp"
                        android:text="JUADS PRIEST "/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/play"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/tv_profile3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/cover_music_3"
                    android:layout_marginLeft="20dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/tv_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prisionero de tus ojos "
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_text3"
                        android:textSize="10dp"
                        android:text="JUADS PRIEST "/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/play"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/tv_profile4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/cover_music_4"
                    android:layout_marginLeft="20dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/tv_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prisionero de tus ojos "
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_text4"
                        android:textSize="10dp"
                        android:text="JUADS PRIEST "/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/play"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/tv_profile5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/cover_music_5"
                    android:layout_marginLeft="20dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/tv_text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prisionero de tus ojos "
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_text5"
                        android:textSize="10dp"
                        android:text="JUADS PRIEST "/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/play"
                    />
            </LinearLayout>

        </LinearLayout>



    </ScrollView>



</LinearLayout>
